<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <preConditions>
        <runningAs username="registrator"/>
    </preConditions>

    <changeSet id="1" author="shabanovve">
	<sql>
		create table customers(
    			customer_id   INTEGER UNIQUE,
    			name VARCHAR(255)
		);
	</sql>
    </changeSet>

    <changeSet id="2" author="shabanovve">
	<sql>
		create sequence seq_customers;
	</sql>
    </changeSet>

    <changeSet id="3" author="shabanovve">
        <sql>
                create table lessons(
                        lesson_id   INTEGER UNIQUE,
                        time timestamp 
                );
        </sql>
    </changeSet>

    <changeSet id="4" author="shabanovve">
        <sql>
                create sequence seq_lessons;
        </sql>
    </changeSet>
</databaseChangeLog>
